<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panelCl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMarketsSortPanel"
    android:paddingStart="@dimen/currency_markets_sort_panel_horizontal_padding"
    android:paddingLeft="@dimen/currency_markets_sort_panel_horizontal_padding"
    android:paddingRight="@dimen/currency_markets_sort_panel_horizontal_padding"
    android:paddingEnd="@dimen/currency_markets_sort_panel_horizontal_padding">

    <com.stocksexchange.android.ui.views.SortPanelTextView
        android:id="@+id/nameTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/currency_markets_sort_panel_vertical_padding"
        android:paddingBottom="@dimen/currency_markets_sort_panel_vertical_padding"
        android:text="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/separatorTv"
        style="@style/CurrencyMarketsSortPanelTitle"/>

    <TextView
        android:id="@+id/separatorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/currency_markets_sort_panel_vertical_padding"
        android:paddingBottom="@dimen/currency_markets_sort_panel_vertical_padding"
        android:paddingStart="@dimen/currency_markets_sort_panel_separator_horizontal_padding"
        android:paddingLeft="@dimen/currency_markets_sort_panel_separator_horizontal_padding"
        android:paddingRight="@dimen/currency_markets_sort_panel_separator_horizontal_padding"
        android:paddingEnd="@dimen/currency_markets_sort_panel_separator_horizontal_padding"
        android:text="/"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/nameTitleTv"
        app:layout_constraintRight_toLeftOf="@+id/volumeTitleTv"
        style="@style/CurrencyMarketsSortPanelTitle"/>

    <com.stocksexchange.android.ui.views.SortPanelTextView
        android:id="@+id/volumeTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/currency_markets_sort_panel_vertical_padding"
        android:paddingBottom="@dimen/currency_markets_sort_panel_vertical_padding"
        android:text="@string/currency_markets_sort_panel_volume_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/separatorTv"
        style="@style/CurrencyMarketsSortPanelTitle"/>

    <com.stocksexchange.android.ui.views.SortPanelTextView
        android:id="@+id/lastPriceTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/currency_markets_sort_panel_vertical_padding"
        android:paddingBottom="@dimen/currency_markets_sort_panel_vertical_padding"
        android:text="@string/last_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        style="@style/CurrencyMarketsSortPanelTitle"/>

    <com.stocksexchange.android.ui.views.SortPanelTextView
        android:id="@+id/dailyChangeTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/currency_markets_sort_panel_vertical_padding"
        android:paddingBottom="@dimen/currency_markets_sort_panel_vertical_padding"
        android:text="@string/currency_markets_sort_panel_daily_change_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CurrencyMarketsSortPanelTitle"/>

</android.support.constraint.ConstraintLayout>